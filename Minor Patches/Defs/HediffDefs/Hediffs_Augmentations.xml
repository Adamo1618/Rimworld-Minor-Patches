  <HediffDef ParentName="ImplantHediffBase">
    <defName>MP_SocialEnhancer</defName>
    <label>social enhancer</label>
    <labelNoun>a social enhancer</labelNoun>
	<stages>
		<li>
			<statOffsets>
				<ArrestPeacefullyChance>0.15</ArrestPeacefullyChance>
				<SocialImpact>0.20</SocialImpact>
				<NegotiationAbility>0.25</NegotiationAbility>
