<Defs>

<!-- ====================================== Augmentations =========================================== -->

  <HediffDef ParentName="ImplantHediffBase">
    <defName>SR_SuprathyroidGland</defName>
    <label>suprathyroid gland</label>
    <labelNoun>a suprathyroid gland</labelNoun>
	<stages>
		<li>
			<capMods>
				<li>
					<capacity>BloodFiltration</capacity>
					<offset>0.20</offset>
				</li>
				<li>
					<capacity>BloodPumping</capacity>
					<offset>0.10</offset>
				</li>
				<li>
					<capacity>Breathing</capacity>
					<offset>0.10</offset>
				</li>
				<li>
					<capacity>Metabolism</capacity>
					<offset>0.10</offset>
				</li>
				<li>
					<capacity>Manipulation</capacity>
					<offset>0.10</offset>
				</li>
				<li>
					<capacity>Moving</capacity>
					<offset>0.10</offset>
				</li>
			</capMods>
			<statOffsets>
				<HungerRateMultiplier>0.80</HungerRateMultiplier>
			</statOffsets>
		</li>
	</stages>
	<spawnThingOnRemoved>SR_SuprathyroidGland</spawnThingOnRemoved>
  </HediffDef>
	
  <HediffDef ParentName="ImplantHediffBase">
    <defName>SR_MuscleAugmentatons</defName>
	<hediffClass>HediffWithComps</hediffClass>
    <label>muscle augmentations</label>
    <labelNoun>muscle augmentations</labelNoun>
	<comps>
	  <li Class="JecsTools.HediffCompProperties_ExtraMeleeDamages">
	    <extraDamages>
		  <li>
		    <def>Blunt</def>
		    <amount>32</amount>
			<armorPenetration>0.8</armorPenetration>
		  </li>
		</extraDamages>
      </li>
	</comps>
	<stages>
		<li>
			<capMods>
				<li>
					<capacity>Manipulation</capacity>
					<offset>0.40</offset>
				</li>
				<li>
					<capacity>Moving</capacity>
					<offset>0.40</offset>
				</li>
			</capMods>
			<statOffsets>
				<MeleeHitChance>4</MeleeHitChance>
				<ShootingAccuracyPawn>4</ShootingAccuracyPawn>
			</statOffsets>
		</li>
	</stages>
	<spawnThingOnRemoved>SR_MuscleAugmentatons</spawnThingOnRemoved>
  </HediffDef>
  
  <HediffDef ParentName="ImplantHediffBase">
    <hediffClass>HediffWithComps</hediffClass>
